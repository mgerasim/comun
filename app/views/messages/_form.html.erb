<%= form_for(@message) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if Client.count{smsmail != nil} != 0 %>
      <div class="field">
        <%= f.label :client %><br />
        <%= f.select :client_id, Client.where{smsmail != nil}.map { |u| [u.name + ' <' + u.smsmail + '>' , u.id] } %>
      </div>
      <div class="field">
        <%= f.label :text %><br />
        <%= f.text_area :text %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
  <% else %>
      Создайте клиента с сотовым телефоном!
  <% end %>
<% end %>
